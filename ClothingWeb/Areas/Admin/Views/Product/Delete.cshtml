@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="row text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card p-4">
        <form method="post">
            <input asp-for="ProductId" hidden />
            <div class="border p-3 mt-4">
                
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="ms-2"></label>
                    <input asp-for="Name" disabled class="form-control border-0 shadow mt-2" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <input asp-for="Description" disabled class="form-control border-0 shadow mt-2" />
                </div> <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="ms-2"></label>
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="ms-2"></textarea>
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" class="form-control border-0 shadow" />
                  
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" />
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ImageUrl" class="ms-2"></label>
                    <input asp-for="ImageUrl" disabled class="form-control border-0 shadow" />
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Category" class="ms-2"></label>
                    <input asp-for="Category" disabled  class="form-control border-0 shadow" />
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Stock" class="ms-2"></label>
                    <input asp-for="Stock" disabled class="form-control border-0 shadow" />
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Color" class="ms-2"></label>
                    <input asp-for="Color" disabled class="form-control border-0 shadow" />
                   
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>



            </div>
        </form>

    </div>

</div>




@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}